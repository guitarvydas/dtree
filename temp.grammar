dt2 {
  Main = Choice
  Choice = "[" Predicate "|" "yes" ":" Branch "|" "no" ":" Branch "]"
  Branch = Choice | Action
  Predicate = function_call 
  Action = function_call
  function_call = char+
  char =
    | "\n" -- newline
    | "?" -- questionmark
    | "%" -- percent
    | "&lt;div&gt;" -- begindiv
    | "&lt;/div&gt;" -- enddiv
    | "&lt;span" (~"&gt;" any)* "&gt;" -- beginspan
    | "&lt;/span&gt;" -- endspan
    | "@" -- at
    | space+ &(~alnum) -- space
    | space -- nonbreakingspace
    | (~space ~"[" ~"]" ~"|" ~"yes" ~"no" ~":" ~"&" ~";" any) -- other
}
